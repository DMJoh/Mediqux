# =============================================================================
# Mediqux Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# =============================================================================

# Database Configuration
POSTGRES_DB=mediqux_db
POSTGRES_USER=mediqux_user
POSTGRES_PASSWORD=change_this_secure_password_123
DB_PORT=5432
POSTGRES_DATA_PATH=postgres_data

# Backend Configuration  
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info
DB_HOST=postgres
DB_NAME=mediqux_db
DB_USER=mediqux_user
DB_PASSWORD=change_this_secure_password_123
JWT_SECRET=change_this_jwt_secret_key_for_production_use_long_random_string
SESSION_SECRET=change_this_session_secret_for_production
FRONTEND_URL=http://localhost:8080
BACKEND_PORT=3000
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads
UPLOAD_DATA_PATH=./uploads

# Frontend Configuration
MEDIQUX_API_URL=http://localhost:3000/api
FRONTEND_PORT=8080

# Docker User/Group Configuration (for development)
# Set these to match your host user to avoid permission issues
# Most Linux users have UID/GID 1000, but you can customize if needed
PUID=1000
PGID=1000

# Production-specific variables (also used by docker-compose.yml)
SESSION_SECRET=change_this_session_secret_for_production
MAX_FILE_SIZE=10MB

# Development vs Production Notes:
# - For development: Use docker-compose -f docker-compose.dev.yml up -d
# - For production: Use docker-compose up -d (uses GHCR images)
# - Update MEDIQUX_API_URL to your actual domain in production
# - Change all passwords and secrets before production deployment